---
import SectionWrapper from './ui/SectionWrapper.astro';
import Card from './ui/Card.astro';
import Tag from './ui/Tag.astro';
---

<SectionWrapper id="solution" background="white">
  <h2 class="text-center font-manrope font-semibold text-petrol text-2xl md:text-[30px] leading-tight mb-12">
    Ce que Lien commun apporte
  </h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
    <Card>
      <svg
        slot="icon"
        class="w-8 h-8 text-petrol"
        viewBox="0 0 32 32"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
      >
        <!-- Oeil ouvert -->
        <path
          d="M4 16C4 16 8 8 16 8C24 8 28 16 28 16C28 16 24 24 16 24C8 24 4 16 4 16Z"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
        <circle
          cx="16"
          cy="16"
          r="3"
          stroke="currentColor"
          stroke-width="2"
        />
      </svg>
      <span slot="title">Transparence</span>
      <span slot="content">Visualisez les dépenses liées aux projets partenaires.</span>
      <Tag slot="footer" variant="status">Traçable</Tag>
    </Card>

    <Card>
      <svg
        slot="icon"
        class="w-8 h-8 text-petrol"
        viewBox="0 0 32 32"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
      >
        <!-- Document avec check -->
        <path
          d="M8 4H20L26 10V28H8V4Z"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
        <path
          d="M20 4V10H26"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
        <path
          d="M12 18L15 21L21 15"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
      <span slot="title">Preuves</span>
      <span slot="content">Justificatifs et jalons regroupés, lisibles.</span>
      <Tag slot="footer" variant="status">Justificatifs</Tag>
    </Card>

    <Card>
      <svg
        slot="icon"
        class="w-8 h-8 text-petrol"
        viewBox="0 0 32 32"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
      >
        <!-- Cercle avec euro -->
        <circle
          cx="16"
          cy="16"
          r="11"
          stroke="currentColor"
          stroke-width="2"
        />
        <path
          d="M18.5 11C17.5 10.5 16.5 10 15 10C12 10 10 12.5 10 16C10 19.5 12 22 15 22C16.5 22 17.5 21.5 18.5 21"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
        />
        <path
          d="M9 14H16M9 18H16"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
        />
      </svg>
      <span slot="title">Simplicité</span>
      <span slot="content">Dons en euros, expérience non-technique.</span>
      <Tag slot="footer" variant="status">Vérifié</Tag>
    </Card>
  </div>
</SectionWrapper>
