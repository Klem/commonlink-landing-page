---
import SectionWrapper from './ui/SectionWrapper.astro';
import Tag from './ui/Tag.astro';
import Button from './ui/Button.astro';
---

<SectionWrapper id="hero" background="white">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
    <!-- Contenu texte -->
    <div class="text-center lg:text-left">
      <Tag variant="status" class="mb-6">Traçabilité vérifiable</Tag>

      <h1 class="font-manrope font-bold text-petrol text-[32px] md:text-[44px] leading-[1.15] mb-6">
        La transparence sur l'usage des dons, euro par euro.
      </h1>

      <p class="font-luciole text-dark/70 text-lg md:text-xl leading-relaxed max-w-2xl mb-8">
        Suivez l'utilisation des fonds chez les associations partenaires, avec des preuves simples à consulter.
      </p>

      <Button href="#comment-ca-marche" class="mb-4">
        Découvrir le fonctionnement
      </Button>

      <p class="font-luciole text-sm text-dark/50">
        Lancement prévu : T2 2026
      </p>
    </div>

    <!-- Illustration SVG - masquée sur mobile -->
    <div class="hidden lg:block" aria-hidden="true">
      <svg
        viewBox="0 0 400 280"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="w-full max-w-[400px] mx-auto"
        role="img"
        aria-label="Illustration d'un journal de dépenses"
      >
        <!-- Ombre de la card -->
        <rect
          x="24"
          y="24"
          width="352"
          height="232"
          rx="16"
          fill="#1A3B4C"
          fill-opacity="0.08"
        />

        <!-- Card conteneur -->
        <rect
          x="20"
          y="20"
          width="352"
          height="232"
          rx="16"
          fill="#F7F7F5"
          stroke="#1A3B4C"
          stroke-width="2"
        />

        <!-- Header de la card -->
        <rect
          x="20"
          y="20"
          width="352"
          height="48"
          rx="16"
          fill="#1A3B4C"
        />
        <rect
          x="20"
          y="52"
          width="352"
          height="16"
          fill="#1A3B4C"
        />

        <!-- Titre header -->
        <text
          x="40"
          y="50"
          fill="#F7F7F5"
          font-family="Manrope, sans-serif"
          font-size="14"
          font-weight="600"
        >
          Journal des dépenses
        </text>

        <!-- Ligne 1 -->
        <g transform="translate(40, 88)">
          <!-- Barre de texte floutée -->
          <rect
            x="0"
            y="8"
            width="120"
            height="12"
            rx="6"
            fill="#1A3B4C"
            fill-opacity="0.15"
          />
          <!-- Tag Vérifié -->
          <rect
            x="140"
            y="4"
            width="70"
            height="20"
            rx="10"
            fill="#35B8A6"
            fill-opacity="0.15"
          />
          <text
            x="152"
            y="18"
            fill="#35B8A6"
            font-family="Manrope, sans-serif"
            font-size="10"
            font-weight="500"
          >
            Vérifié
          </text>
          <!-- Check icon -->
          <path
            d="M177 10L180 13L186 7"
            stroke="#35B8A6"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            transform="translate(-4, 2)"
          />
          <!-- Montant -->
          <text
            x="270"
            y="18"
            fill="#1A3B4C"
            font-family="Manrope, sans-serif"
            font-size="14"
            font-weight="600"
            text-anchor="end"
          >
            120 €
          </text>
        </g>

        <!-- Séparateur 1 -->
        <line
          x1="40"
          y1="124"
          x2="352"
          y2="124"
          stroke="#1A3B4C"
          stroke-opacity="0.1"
          stroke-width="1"
        />

        <!-- Ligne 2 -->
        <g transform="translate(40, 140)">
          <!-- Barre de texte floutée -->
          <rect
            x="0"
            y="8"
            width="100"
            height="12"
            rx="6"
            fill="#1A3B4C"
            fill-opacity="0.15"
          />
          <!-- Tag Vérifié -->
          <rect
            x="140"
            y="4"
            width="70"
            height="20"
            rx="10"
            fill="#35B8A6"
            fill-opacity="0.15"
          />
          <text
            x="152"
            y="18"
            fill="#35B8A6"
            font-family="Manrope, sans-serif"
            font-size="10"
            font-weight="500"
          >
            Vérifié
          </text>
          <!-- Check icon -->
          <path
            d="M177 10L180 13L186 7"
            stroke="#35B8A6"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"
            transform="translate(-4, 2)"
          />
          <!-- Montant -->
          <text
            x="270"
            y="18"
            fill="#1A3B4C"
            font-family="Manrope, sans-serif"
            font-size="14"
            font-weight="600"
            text-anchor="end"
          >
            85 €
          </text>
        </g>

        <!-- Séparateur 2 -->
        <line
          x1="40"
          y1="176"
          x2="352"
          y2="176"
          stroke="#1A3B4C"
          stroke-opacity="0.1"
          stroke-width="1"
        />

        <!-- Ligne 3 -->
        <g transform="translate(40, 192)">
          <!-- Barre de texte floutée -->
          <rect
            x="0"
            y="8"
            width="90"
            height="12"
            rx="6"
            fill="#1A3B4C"
            fill-opacity="0.15"
          />
          <!-- Tag En cours (neutral) -->
          <rect
            x="140"
            y="4"
            width="70"
            height="20"
            rx="10"
            fill="#1A3B4C"
            fill-opacity="0.08"
          />
          <text
            x="152"
            y="18"
            fill="#1A3B4C"
            fill-opacity="0.5"
            font-family="Manrope, sans-serif"
            font-size="10"
            font-weight="500"
          >
            En cours
          </text>
          <!-- Montant -->
          <text
            x="270"
            y="18"
            fill="#1A3B4C"
            font-family="Manrope, sans-serif"
            font-size="14"
            font-weight="600"
            text-anchor="end"
          >
            210 €
          </text>
        </g>

        <!-- Total en bas -->
        <line
          x1="40"
          y1="228"
          x2="352"
          y2="228"
          stroke="#1A3B4C"
          stroke-opacity="0.2"
          stroke-width="1"
        />
        <text
          x="40"
          y="246"
          fill="#1A3B4C"
          fill-opacity="0.6"
          font-family="Manrope, sans-serif"
          font-size="12"
          font-weight="500"
        >
          Total projet
        </text>
        <text
          x="310"
          y="246"
          fill="#1A3B4C"
          font-family="Manrope, sans-serif"
          font-size="16"
          font-weight="700"
          text-anchor="end"
        >
          415 €
        </text>
      </svg>
    </div>
  </div>
</SectionWrapper>
